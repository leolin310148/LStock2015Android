<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/subscriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/pagerSlidingTabStrip"
                android:layout_width="match_parent"
                android:textColor="@color/tabTextColor"
                app:pstsShouldExpand="true"
                app:pstsTextAllCaps="false"
                app:pstsTabBackground="@color/tabBackground"
                app:pstsIndicatorHeight="1dp"
                app:pstsIndicatorColor="@color/tabIndicatorColor"
                app:pstsDividerColor="@color/tabDividerColor"
                android:layout_height="48dip" />
        <android.support.v4.view.ViewPager
                android:layout_below="@id/pagerSlidingTabStrip"
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
    </RelativeLayout>

</RelativeLayout>